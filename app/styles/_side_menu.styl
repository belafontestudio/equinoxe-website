a#closeMenu
    margin 0
    position relative
    width 100%
    display block
    img
        width 17px
        height 17px
        margin 20px auto 0 auto
        display block
a#closeMenu:hover
    opacity 0.6

.sidr {
    display: none;
    position: absolute;
    position: fixed;
    top: 0;
    height: 100%;
    z-index: 1;
    width: 260px;
    overflow-x: none;
    overflow-y: auto;
    font-family "Alegreya Sans", "Helvetica Neue", sans-serif
    font-size: 15px;
    background: #F4BB3B;
    color: #fff;
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
}

.sidr h1,
.sidr h2,
.sidr h3,
.sidr h4,
.sidr h5,
.sidr h6 {

    background-image: none
    background-image: none
    background-image: none
    background-image: none
    background-image: none
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
}

.sidr ul {

    border-top: none
    border-bottom: none
}
.sidr ul li {

    border-top: none
    border-bottom: none
}

.sidr ul li:hover>a,
.sidr ul li:hover>span,
.sidr ul li.active>a,
.sidr ul li.active>span,
.sidr ul li.sidr-class-active>a,
.sidr ul li.sidr-class-active>span {
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
}

.sidr ul li ul li:hover>a,
.sidr ul li ul li:hover>span,
.sidr ul li ul li.active>a,
.sidr ul li ul li.active>span,
.sidr ul li ul li.sidr-class-active>a,
.sidr ul li ul li.sidr-class-active>span {
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
}


//override

div#side-menu-logo 
    position: relative
    width: 100%
    margin-top: 30px

div#side-menu-logo img {
    position: relative;
    width: 70%;
    margin: 0 auto;
    display: inherit;
}

.sidr ul {
    padding: 0;
    margin: 50px 0;
}
.sidr ul li {
    padding-top: 15px;
    padding-bottom: 15px;
}
.sidr ul li a {
    font-size: 15px;
    line-height: 15px;
    letter-spacing: 1px;
    text-align: center;
    text-transform: uppercase;
    text-decoration: none;
    padding: 0;
    margin: 0;
}
.sidr ul li:hover {
    background-color: #ffc345;
}
.sidr ul li a.enquire-button {
    border: 2px solid white;
    padding: 15px 30px;
    margin: 0 40px;
}
.sidr ul li a.enquire-button:hover {
    background-color: white;
    color: #F4BB3B
}
.sidr ul li:last-child {
    padding: 0;
    margin-top: 40px;
}
.sidr ul li:last-child:hover {
    background-color: #F4BB3B;
}

+below(480px)
    .sidr 
        width 100%
