#simple-menu
    z-index 9999
    position relative
.hslide
    display none
.slide
    padding: 0
    background-repeat: no-repeat
    background-size: cover
    background-position center center
.imageHolder
    img
        bottom 0 
    
        
    a
        transform(translateZ(1px))
        
div#container-other-specs
    a.button
        left 0
        margin 30px 0 60px 0
    ul#single-yacht-specs
        li
            color yellow
            
div.bottom-spacer
    position relative
    display inline-block
    clear both
    margin 0 0 200px 0
div#landing-menu 
     position fixed
     top 0
     left 0
     right 0
     height 60px
     z-index 1
     div.center
         top 20px
    ul#anchor-menu
        margin-left 80px !important
        li
            margin-right: 35px
            text-align left !important
        a
            outline 0
            font-family "Alegreya Sans", "Helvetica Neue", sans-serif
            font-weight 700
            text-rendering optimizeLegibility
            color white
            font-size 15px
            line-height 15px
            letter-spacing 1px
            text-transform uppercase
            text-decoration none
            &.active, &:hover, &:active
                color yellow 
            &.active
                border-bottom 1px solid yellow
                
div.imgbackground
    position absolute
    width 100%
    height 100%
    z-index -3
    top 0 !important
    display inline-block
    img.full-picture
        position relative
        height 100%
        max-height 100%
        width auto
        top 0
        opacity 0.6
  
div.bg-img-slide

    z-index: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    background-position: bottom center;
    background-repeat: no-repeat;
    background-size: cover;

div#container-other-specs
